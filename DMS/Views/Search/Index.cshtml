@model DAS.ViewModels.SearchTerm

<h5>Advanced Search</h5>

<div class="row">
    <div class="col-12">
        <form method="post" asp-controller="Search" asp-action="SearchTerm">
            <div class="form-group">
                <label asp-for="Type">Type</label>
                <select asp-for="Type" asp-items="Html.GetEnumSelectList<DAS.ViewModels.SearchEntityType>()" class="form-control"></select>
            </div>
            <div class="form-group">
                <label asp-for="Name">Name</label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="IncludeTitle" class="form-check-input" id="includeTitle">
                <label class="form-check-label" for="includeTitle">Search in Title</label>
            </div>
            <div class="form-group form-check">
                <input type="checkbox" asp-for="IncludeDescription" class="form-check-input" id="includeDescription">
                <label class="form-check-label" for="includeDescription">Search in Description</label>
            </div>
            <div class="form-group">
                <label asp-for="MetaTerms[0].Name">Meta</label>
                <input asp-for="MetaTerms[0].Name" class="form-control" />
                <select asp-for="MetaTerms[0].Operation" asp-items="Html.GetEnumSelectList<DAS.ViewModels.MetaSearchOperation>()" class="form-control"></select>
                <input asp-for="MetaTerms[0].Value" class="form-control" />
            </div>
            <button type="submit" class="btn btn-success"><i class="fa fa-search mr-1"></i>Search</button>
        </form>
    </div>
</div>